<div class="question">
  <div class="q-info-box">
    <p class="large-text center"><%= question.score %></p>
    <p>score</p>
  </div>
  <div class="q-info-box">
    <p><a href="/questions/<%= question.id %>"><%= question.title %></a></p>
    <p>
      <% question.tags.each do |tag| %>
        <a href="/questions/tagged/<%= tag %>"><span class="tag"><%= tag %></span></a>
      <% end %>
    </p>
  </div>
  <span class="clearfix"></span>
</div>
